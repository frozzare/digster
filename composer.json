{
  "name": "frozzare/digster",
  "type": "wordpress-plugin",
  "description": "Twig templates for WordPress",
  "homepage": "https://github.com/frozzare/digster",
  "license": "MIT",
  "keywords": ["wordpress","plugin"],
  "authors": [
    {
      "name": "Fredrik Forsmo",
      "email": "fredrik.forsmo@gmail.com",
      "homepage": "https://github.com/frozzare"
    }
  ],
  "support": {
    "issues": "https://github.com/frozzare/digster/issues"
  },
  "autoload": {
    "files": [
      "src/api.php"
    ]
  },
  "require": {
    "php": ">=5.4.7",
    "twig/twig": "^1.18",
    "asm89/twig-cache-extension": "~1.0",
    "frozzare/wp-autoload": "^2.0.0"
  },
  "require-dev": {
    "frozzare/wp-test-suite": "~1.0",
    "wp-coding-standards/wpcs": "dev-develop"
  },
  "scripts": {
    "post-install-cmd": "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs",
    "post-update-cmd" : "\"vendor/bin/phpcs\" --config-set installed_paths vendor/wp-coding-standards/wpcs"
  }
}
